# Read-Buddy Environment Configuration Template
# Copy this file to .env and replace the placeholder values

# ===========================================
# SUPABASE DATABASE CONFIGURATION
# ===========================================
# Get this from Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres

# ===========================================
# SUPABASE PROJECT CONFIGURATION
# ===========================================
# Get these from Supabase Dashboard → Settings → API
SUPABASE_URL=https://[YOUR_PROJECT_REF].supabase.co
SUPABASE_ANON_KEY=[YOUR_SUPABASE_ANON_KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR_SUPABASE_SERVICE_ROLE_KEY]

# ===========================================
# API KEYS
# ===========================================
# Get from RapidAPI dashboard
RAPIDAPI_KEY=[YOUR_RAPIDAPI_KEY]

# Get from OpenAI dashboard
OPENAI_API_KEY=[YOUR_OPENAI_API_KEY]

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
NODE_ENV=production
PORT=8888

# Update this with your actual Netlify domain after deployment
CORS_ORIGIN=https://[YOUR_NETLIFY_DOMAIN].netlify.app
